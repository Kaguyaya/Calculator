<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece7e7"
    android:columnCount="4"
    android:rowCount="6"
    android:orientation="horizontal"
    >
<EditText
    android:id="@+id/tv_result"
    android:layout_rowWeight="3"
    android:layout_columnSpan="4"
    android:layout_columnWeight="4"
    android:gravity="end|bottom"
    android:text="0"
    android:textSize="48sp"
    android:inputType="number"
    ></EditText>
    <Button
        android:id="@+id/bt1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="C"
        android:onClick="bt1"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="/"
        android:onClick="bt2"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="X"
        android:onClick="bt3"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt4"
        android:onClick="bt4"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="退格"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt5"
        android:onClick="bt5"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="7"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt6"
        android:onClick="bt6"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="8"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt7"
        android:onClick="bt7"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="9"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt8"
        android:onClick="bt8"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_light"
        android:text="-"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt9"
        android:onClick="bt9"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="4"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt10"
        android:onClick="bt10"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="5"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt11"
        android:onClick="bt11"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="6"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt12"
        android:onClick="bt12"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="+"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt13"
        android:onClick="bt13"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="1"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt14"
        android:onClick="bt14"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="2"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt15"
        android:onClick="bt15"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="3"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt20"
        android:layout_rowSpan="2"
        android:onClick="bt20"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="="
        android:textColor="#ffffff"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt17"
        android:onClick="bt17"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="%"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt18"
        android:onClick="bt18"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="0"
        android:textSize="28sp"
        ></Button>
    <Button
        android:id="@+id/bt19"
        android:onClick="bt19"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="."
        android:textSize="28sp"
        ></Button>

</GridLayout>